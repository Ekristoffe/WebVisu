{
    "compilerOptions": {
        "lib": ["es2018", "dom"],
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "removeComments": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "strict": true,
        "experimentalDecorators": true,
        "strictNullChecks": false // for maps returning undefined | string
    }
}